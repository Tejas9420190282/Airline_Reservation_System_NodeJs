<!-- Result_view_Pssengers_Using_Flight_Number.ejs -->

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Passenger List</title>
    <link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css" rel="stylesheet">
</head>
<body class="bg-gray-100 p-6">
    <div class="max-w-6xl mx-auto bg-white p-6 rounded-lg shadow-lg">
        <h1 class="text-2xl font-bold mb-4">Passenger List</h1>

        <% if (passengers.length > 0) { %>
        <table class="w-full border-collapse border border-gray-300">
            <thead>
                <tr class="bg-gray-200">
                    <th class="border border-gray-300 p-2">PNR</th>
                    <th class="border border-gray-300 p-2">Name</th>
                    <th class="border border-gray-300 p-2">Age</th>
                    <th class="border border-gray-300 p-2">Gender</th>
                    <th class="border border-gray-300 p-2">Meal Choice</th>
                    <th class="border border-gray-300 p-2">Flight Number</th>
                    <th class="border border-gray-300 p-2">Class</th>
                    <th class="border border-gray-300 p-2">Journey Date</th>
                    <th class="border border-gray-300 p-2">Lounge Access</th>
                    <th class="border border-gray-300 p-2">Priority Check-in</th>
                    <th class="border border-gray-300 p-2">Insurance</th>
                </tr>
            </thead>
            <tbody>
                <% passengers.forEach(passenger => { %>
                    <tr>
                        <td class="border border-gray-300 p-2"><%= passenger.pnr %></td>
                        <td class="border border-gray-300 p-2"><%= passenger.name %></td>
                        <td class="border border-gray-300 p-2"><%= passenger.age %></td>
                        <td class="border border-gray-300 p-2"><%= passenger.gender %></td>
                        <td class="border border-gray-300 p-2"><%= passenger.meal_choice %></td>
                        <td class="border border-gray-300 p-2"><%= passenger.Ticket_Model.flight_no %></td>
                        <td class="border border-gray-300 p-2"><%= passenger.Ticket_Model.class %></td>
                        <td class="border border-gray-300 p-2"><%= passenger.Ticket_Model.journey_date %></td>
                        <td class="border border-gray-300 p-2"><%= passenger.Ticket_Model.lounge_access %></td>
                        <td class="border border-gray-300 p-2"><%= passenger.Ticket_Model.priority_checkin %></td>
                        <td class="border border-gray-300 p-2"><%= passenger.Ticket_Model.insurance %></td>
                    </tr>
                <% }) %>
            </tbody>
        </table>
        <% } else { %>
            <p class="text-red-500">No passengers found for this flight number.</p>
        <% } %>
    </div>
</body>
</html>
