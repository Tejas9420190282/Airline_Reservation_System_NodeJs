<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Aadith Airlines Login</title>
  <!-- Tailwind CSS -->
  <script src="https://cdn.tailwindcss.com"></script>
</head>

<body class="bg-blue-50">

  <!-- Include Navbar 
  include('navbar') %> -->

<header class="bg-blue-900 text-white">
  <div class="container mx-auto flex justify-between items-center px-6 py-4">
    <h1 class="text-2xl font-bold">Hindustan  AIRLINES</h1>
    <nav class="space-x-6">
      <a href="#" class="hover:text-yellow-400">Home</a>
      <a href="/login" class="hover:text-yellow-400">Book Tickets</a>
      <a href="/about" class="hover:text-yellow-400">About Us</a>
      <a href="/contact" class="hover:text-yellow-400">Contact Us</a>
      <a href="/login" class="hover:text-yellow-400">login</a>
  </div>
</header>

  <!-- Login Form Section -->
  <div class="container mx-auto px-6 py-12">
    <div class="max-w-md mx-auto bg-white shadow-lg rounded-lg p-8">
      <h2 class="text-3xl font-semibold text-center text-blue-900 mb-6">Login to Hindustan Airlines</h2>

      <!-- Login Form -->
      <form action="/login-submit" method="POST" class="space-y-4">
        <div class="flex flex-col">
          <label for="email" class="text-gray-700">Email</label>
          <input type="email" id="email" name="email" required
            class="px-4 py-2 border rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent">
        </div>
        
        <div class="flex flex-col">
          <label for="password" class="text-gray-700">Password</label>
          <input type="password" id="password" name="password" required
            class="px-4 py-2 border rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent">
        </div>
        
        <button type="submit" class="w-full bg-blue-900 text-white py-2 rounded-md hover:bg-blue-800">
          Login
        </button>
      </form>

      <!-- Create Account Option -->
      <div class="mt-4 text-center">
        <p class="text-sm text-gray-700">Don't have an account?</p>
        <a href="/create-account" class="text-blue-500 hover:underline">Create an account</a>
      </div>
    </div>
  </div>

</body>

</html>
