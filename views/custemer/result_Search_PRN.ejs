<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Ticket Details</title>
    <script src="https://cdn.tailwindcss.com"></script>
</head>
<body class="bg-gray-100 min-h-screen flex flex-col items-center justify-center p-6">

    <div class="w-full max-w-5xl bg-white shadow-lg rounded-lg p-6">
        <h2 class="text-2xl font-bold text-center text-gray-800 mb-4">Ticket Details</h2>

        <% if (message) { %>
            <p class="text-red-500 text-center"><%= message %></p>
        <% } else { %>

            <div class="overflow-x-auto">
                <table class="min-w-full bg-white border border-gray-300">
                    <thead>
                        <tr class="bg-blue-500 text-white">
                            <th class="border px-4 py-2">Flight No</th>
                            <th class="border px-4 py-2">Journey Date</th>
                            <th class="border px-4 py-2">Class</th>
                            <th class="border px-4 py-2">Booking Status</th>
                            <th class="border px-4 py-2">Lounge Access</th>
                            <th class="border px-4 py-2">Insurance</th>
                            <th class="border px-4 py-2">Priority Check-in</th>
                            <th class="border px-4 py-2">Passenger Name</th>
                            <th class="border px-4 py-2">Age</th>
                            <th class="border px-4 py-2">Gender</th>
                            <th class="border px-4 py-2">Meal Choice</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% ticketDetails.forEach(ticket => { %>
                            <tr class="border">
                                <td class="border px-4 py-2"><%= ticket.flight_no %></td>
                                <td class="border px-4 py-2"><%= ticket.journey_date %></td>
                                <td class="border px-4 py-2"><%= ticket.class %></td>
                                <td class="border px-4 py-2"><%= ticket.booking_status %></td>
                                <td class="border px-4 py-2"><%= ticket.lounge_access %></td>
                                <td class="border px-4 py-2"><%= ticket.insurance %></td>
                                <td class="border px-4 py-2"><%= ticket.priority_checkin %></td>
                                <td class="border px-4 py-2 font-semibold"><%= ticket.passenger_name %></td>
                                <td class="border px-4 py-2"><%= ticket.passenger_age %></td>
                                <td class="border px-4 py-2"><%= ticket.passenger_gender %></td>
                                <td class="border px-4 py-2"><%= ticket.meal_choice %></td>
                            </tr>
                        <% }) %>
                    </tbody>
                </table>
            </div>
        <% } %>

        <div class="mt-4 text-center">
            <a href="/show-ticket-prn-search" class="text-blue-500 hover:underline">Go back</a>
        </div>
    </div>

</body>
</html>
