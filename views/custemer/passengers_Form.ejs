  <!DOCTYPE html>
  <html lang="en">
  <head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Passenger & Travel Details</title>
    <script src="https://cdn.tailwindcss.com"></script>
  </head>
  <body class="bg-gray-100 p-6 flex justify-center">
    <div class="w-full max-w-lg bg-white shadow-lg rounded-lg p-6">
      <h2 class="text-2xl font-bold text-gray-700 text-center mb-4">Passenger Details</h2>
      
      <form action="/submit-passengers-details" method="POST" class="space-y-4">
        <!-- Hidden fields to pass flight and passenger details -->
        <!-- Highlight: Added passengers hidden field -->
        <input type="hidden" name="passengers" value="<%= passengers %>">
        <input type="hidden" name="selectedFlight" value="<%= selectedFlight %>">
        <input type="hidden" name="sit_class" value="<%= sit_class %>">
        <input type="hidden" name="flight_no" value="<%= flight_no %>">
        <input type="hidden" name="departure_date" value="<%= departure_date %>">
        <input type="hidden" name="origin" value="<%= origin %>">
        <input type="hidden" name="destination" value="<%= destination %>">
  
        <!-- Loop to create a section for each passenger -->
        <% for (let i = 0; i < passengers; i++) { %>
          <div class="p-4 border-b border-gray-300">
            <h3 class="text-xl font-bold text-gray-700">Passenger <%= i + 1 %></h3>
            
            <!-- Passenger Name -->
            <div>
              <label class="block text-gray-600 font-semibold">Passenger Name</label>
              <input type="text" name="passenger_name[]" required class="w-full border p-2 rounded-md">
            </div>
            
            <!-- Age -->
            <div>
              <label class="block text-gray-600 font-semibold">Age</label>
              <input type="number" name="age[]" required min="1" class="w-full border p-2 rounded-md">
            </div>
            
            <!-- Gender -->
            <div>
              <label class="block text-gray-600 font-semibold">Gender</label>
              <select name="gender[]" class="w-full border p-2 rounded-md">
                <option value="Male">Male</option>
                <option value="Female">Female</option>
                <option value="Other">Other</option>
              </select>
            </div>
            
            <!-- Infinite Meal Option -->
            <div>
              <label class="block text-gray-600 font-semibold">Infinite Meal</label>
              <select name="infinite_meal[]" class="w-full border p-2 rounded-md">
                <option value="No" selected>No</option>
                <option value="Yes">Yes</option>
              </select>
            </div>
          </div>
        <% } %>
        
        <!-- Travel Details Section (common for the booking) -->
        <h2 class="text-2xl mt-10 font-bold text-gray-700 text-center mt-6">Enter Travel Details</h2>
        <div>
          <label class="block text-gray-600 font-semibold">Premium Lounge Access</label>
          <select name="lounge_access" class="w-full border p-2 rounded-md">
            <option value="No" selected>No</option>
            <option value="Yes">Yes</option>
          </select>
        </div>
        <div>
          <label class="block text-gray-600 font-semibold">Priority Check-in</label>
          <select name="priority_checkin" class="w-full border p-2 rounded-md">
            <option value="No" selected>No</option>
            <option value="Yes">Yes</option>
          </select>
        </div>
        <div>
          <label class="block text-gray-600 font-semibold">Travel Insurance</label>
          <select name="insurance" class="w-full border p-2 rounded-md">
            <option value="No" selected>No</option>
            <option value="Yes">Yes</option>
          </select>
        </div>
        
        <!-- Submit Button -->
        <div class="text-center mt-6">
          <button type="submit" class="bg-blue-500 text-white px-4 py-2 rounded-md hover:bg-blue-700">
            Submit
          </button>
        </div>
      </form>
    </div>
  </body>
  </html>
  
  
  
  
  
  
